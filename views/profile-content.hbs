<h1>estos serán los conteniiiiidooooos</h1>

<div class="user-gallery">
  {{#each user.artworks}}
  <div class="user-gallery-card">
  <p>{{this.description}}</p>
  <h3>{{this.title}}</h3>
  <p>{{this.genre}}</p>
  <img src="{{this.imgPath}}" alt="Obra">
  </div>
  {{/each}}
</div>


<form action="arts/new" method="POST" enctype="multipart/form-data">
    <label for="name">Título de la obra</label>
    <input type="text" name="title" id="name">

    {{#if isGallery}}

      <label for="arts">Autor de la obra</label>
      <input type="text" name="authorForGallery" id="arts">

    {{/if}}

    <label for="desc">Descripción de la obra</label>
    <input type="text" name="description" id="desc">

    <label for="date">Fecha de creación</label>
    <input type="date"  name="dateCreated" id="date">
    
    <select name="genre" id="gen">

      <option value="">Género de la obra</option>
      <option  value="pintura">Pintura</option>
      <option  value="escultura">Escultura</option>
      <option  value="fotografía">Fotografía</option>
      <option  value="instalación">Instalación</option>
    
    <label for="art-photo">Elegir obra</label>
    <input type="file" name="photo" id="art-photo">
 
    <button type="submit">Subir obra</button>
</form>    

